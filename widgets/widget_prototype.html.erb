<!-- This is the executed script for the widget. Here you can add and remove your own functions. -->
<script type="text/javascript">
// setting the needed variables
// account
var account;
var products;
var artist = $('#widget').attr('artist');
$.getJSON(('/widget_api/' + artist), null, function(data){
		account = data;
	}
);
$.getJSON('/widget_api/' + artist + '/products', null, function(data){
		products = data;
		for (var x = 0; x < products.length; x++){
			$('<div>'+products[x].product.titel+'</div><p/>').appendTo('.title-list');
		};
	}
);
</script>

